<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>Product Store</title>
    <link rel="stylesheet" href="/css/Layout.css">
</head>
<body>
    <div class="header">
        <h1>ProductStore</h1>
        <div class="login">
            @if (User.Identity.IsAuthenticated == true && User.IsInRole("customer"))
            {
                <a href="/Account/Logout">Log Out</a>
                <a href="/Home/Cart">Cart</a>
            }
            else if (User.Identity.IsAuthenticated == true && User.IsInRole("manager"))
            {
                <a href="/Account/Logout">Log Out</a>
                <a href="/Order/OrderView">Orders</a>
                <a href="/Manager/AddProduct">Add Product</a>
            }
            else
            {
                <a href="/Account/Login">Log In</a>
            }
        </div>
        <div class="hello">
            @if (User.Identity.IsAuthenticated == true)
            {
                <b>Hello <b id="username"></b>!</b>
                <script>
                    var UserName = document.cookie.replace(/(?:(?:^|.*;\s*)UserName\s*\=\s*([^;]*).*$)|^.*$/, "$1");
                    document.getElementById("username").innerHTML = UserName;
                </script>
            }
        </div>
        <div class="nav">
            <ul>
                <li><a href="/NavBar/GoToIndex">Products</a></li>
                <li><a href="/NavBar/Contacts">Contacts</a></li>
                <li><a href="/NavBar/Faq">FAQ</a></li>
                <li><a href="/NavBar/Aboutus">About us</a></li>
            </ul>
        </div>
    </div>
    <div class="main">
        @RenderBody()
    </div>
    <div class="footer">
        <p>Copyright © Product store</p>
    </div>
</body>
</html>