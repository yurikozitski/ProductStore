
    <link rel="stylesheet" href="~/css/Account/login.css" />

    <div class="Login">
        <form method="post" action="~/Account/Login">
            <p>
                <label for="email">Email:</label><br />
                <input type="text" id="email" name="Email" required  />
            </p>
            <p>
                <label for="password">Password:</label><br />
                <input type="password" id="password" name="Password" required minlength="3" maxlength="20"/>
            </p>
            <p>
                <div class="button"><input type="submit" value="Log In" /></div>
            </p>
            <p>Don't have an account? <a href="/Account/Register">Register</a></p>
        </form>
    </div>


